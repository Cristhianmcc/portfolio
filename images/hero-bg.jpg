    <line x1="1600" y1="0" x2="1600" y2="1080" stroke="#ffffff" stroke-width="1"/>
    <line x1="1800" y1="0" x2="1800" y2="1080" stroke="#ffffff" stroke-width="1"/>
  </g>
  
  <!-- Animation elements -->
  <rect x="100" y="300" width="100" height="100" fill="#7047eb" opacity="0.2"/>
  <rect x="1700" y="400" width="150" height="150" fill="#ff4d8d" opacity="0.2"/>
  <rect x="500" y="700" width="80" height="80" fill="#4deeea" opacity="0.2"/>
  <rect x="1200" y="200" width="120" height="120" fill="#7047eb" opacity="0.2"/>
  
  <!-- Animation curves -->
  <path d="M100,900 C300,700 500,800 700,600 S900,500 1100,300 S1300,400 1500,200 S1700,300 1900,100" stroke="#7047eb" stroke-width="3" fill="none" opacity="0.3"/>
  <path d="M100,100 C300,300 500,200 700,400 S900,500 1100,700 S1300,600 1500,800 S1700,700 1900,900" stroke="#ff4d8d" stroke-width="3" fill="none" opacity="0.3"/>
  
  <!-- Dots representing keyframes -->
  <circle cx="200" cy="200" r="5" fill="#ffffff" opacity="0.5"/>
  <circle cx="400" cy="400" r="5" fill="#ffffff" opacity="0.5"/>
  <circle cx="600" cy="200" r="5" fill="#ffffff" opacity="0.5"/>
